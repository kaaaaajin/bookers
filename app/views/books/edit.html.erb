 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
<% end %> 

<div class= field> 
 <%= form_with model:@book, uri:book_path(@book.id), method: :patch do |f| %>
 <div class="field-title">
  <h4>Title</h4>
  <%= f.text_field :title %>
 </div>
 <div class="field-body">
  <h4>Body</h4>
  <%= f.text_area :body %>
 </div>
 <div class="btn">
  <%= f.submit 'Update Book' %>
 </div>
<% end %>
</div>


